    <script>
      // Initialize terminal when DOM is ready
      document.addEventListener('DOMContentLoaded', () => {
        const terminalElement = document.getElementById('terminal')
        if (!terminalElement) return

        // Check if Terminal is available
        if (typeof (window as any).Terminal === 'undefined') {
          console.error('Terminal class not found. Make sure xterm.js is loaded.')
          return
        }

        // Initialize terminal with responsive sizing
        const term = new (window as any).Terminal({
          cols: Math.floor(Math.min(80, (terminalElement.offsetWidth - 60) / 8.4)), // Responsive cols based on width
          rows: 24,
          cursorBlink: true,
          theme: {
            background: '#0a0a0a',
            foreground: '#0066ff',
            cursor: '#0066ff',
            selection: '#0066ff44'
          },
          fontFamily: 'Courier New, monospace',
          fontSize: 14,
          scrollback: 1000,
          allowTransparency: true
        })

        term.open(terminalElement)

        // Welcome message
        term.write('Welcome to the SAIC CyberSec Terminal.\r\n')
        term.write("Type 'help' to get started.\r\n\n> ")

        let buffer = ''

        const commands: Record<string, (arg?: string) => string> = {
          help: () =>
            'Available commands:\r\nwhoami, ls, cat, nmap, clear, banner, hack, status',
          whoami: () => 'root@saic-cybersec',
          ls: () => 'README.txt  members.txt  flag.txt  exploits/  tools/  secrets/',
          cat: (arg?: string) => {
            if (arg === 'README.txt')
              return 'Welcome to SAIC CyberSec Club.\r\nWe hack. We learn. We defend.\r\nEthical hacking at IIT Mandi.'
            if (arg === 'members.txt')
              return 'SAIC Core Team Members:\r\n\r\nCoordinator:\r\n- Abhinandan Kumar\r\n\r\nCore Team:\r\n- Somit Gond\r\n- Ayush Gaurav\r\n- Utsav\r\n- Divyanshu\r\n- Abhijith R Nair\r\n- Pranav Shirbhate\r\n- Vishnu\r\n- Piyush Panpaliya\r\n- Piyush Dwivedi\r\n- Davda James\r\n- Arani Ghosh\r\n\r\n'
            if (arg === 'flag.txt')
              return 'SAIC{w3lc0m3_70_541c}'
            
            return `cat: ${arg || 'file'}: No such file`
          },
          nmap: (arg?: string) =>
            `Scanning ${arg || '127.0.0.1'}...\r\nHost is up (0.001s latency).\r\nAll 1000 scanned ports are filtered.`,
          hack: () =>
            'Initiating penetration test...\r\nTarget acquired.\r\nVulnerability found: CVE-2024-1337\r\nAccess granted. Welcome to the matrix.',
          status: () =>
            'SAIC Status: OPERATIONAL\r\nSecurity Level: MAXIMUM\r\nThreat Level: LOW\r\nSystem Uptime: 99.9%',
          banner: () => `
  ███████╗ █████╗ ██╗ ██████╗
  ██╔════╝██╔══██╗██║██╔════╝
  ███████╗███████║██║██║     
  ╚════██║██╔══██║██║██║     
  ███████║██║  ██║██║╚██████╗
  ╚══════╝╚═╝  ╚═╝╚═╝ ╚═════╝

  SYSTEM ADMINISTRATION & INFOSEC CELL
  IIT MANDI CYBERSECURITY CLUB`,
          clear: () => {
            term.clear()
            return ''
          }
        }

        const handleInput = (key: string) => {
          if (key === '\r') {
            term.write('\r\n')
            const [cmd, ...args] = buffer.trim().split(' ')
            if (cmd) {
              const result =
                commands[cmd]?.(args.join(' ')) ||
                `Unknown command: ${cmd}. Type 'help' for available commands.`
              term.writeln(result)
            }
            buffer = ''
            term.write('\r\n> ')
          } else if (key === '\u007F') {
            // Backspace
            if (buffer.length > 0) {
              buffer = buffer.slice(0, -1)
              term.write('\b \b')
            }
          } else {
            buffer += key
            term.write(key)
          }
        }

        term.onData(handleInput)

        // Handle window resize to adjust terminal size
        const handleResize = () => {
          const newCols = Math.floor(Math.min(80, (terminalElement.offsetWidth - 60) / 8.4))
          if (newCols !== term.cols) {
            term.resize(newCols, term.rows)
          }
        }

        window.addEventListener('resize', handleResize)
        
        // Clean up event listener when component unmounts
        window.addEventListener('beforeunload', () => {
          window.removeEventListener('resize', handleResize)
        })
      })

      // Smooth scroll function
      function scrollToAbout() {
        const element = document.getElementById('about')
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' })
        }
      }

      // Add click handler for tour button
      document.addEventListener('DOMContentLoaded', () => {
        const tourBtn = document.getElementById('init-tour-btn')
        if (tourBtn) {
          tourBtn.addEventListener('click', scrollToAbout)
        }

        // Terminal window button handlers
        const terminalWindow = document.querySelector('.terminal-window') as HTMLElement
        const terminalClose = document.getElementById('terminal-close')
        const terminalMinimize = document.getElementById('terminal-minimize')
        const terminalMaximize = document.getElementById('terminal-maximize')

        // Close button - hide terminal
        if (terminalClose && terminalWindow) {
          terminalClose.addEventListener('click', () => {
            terminalWindow.style.display = 'none'
            // Show a message or restore button
            setTimeout(() => {
              terminalWindow.style.display = 'flex'
            }, 2000)
          })
        }

        // Minimize button - collapse terminal
        if (terminalMinimize) {
          terminalMinimize.addEventListener('click', () => {
            const terminalBody = document.querySelector('.terminal-body') as HTMLElement
            if (terminalBody) {
              terminalBody.style.display = terminalBody.style.display === 'none' ? 'flex' : 'none'
            }
          })
        }

        // Maximize button - toggle fullscreen
        if (terminalMaximize && terminalWindow) {
          terminalMaximize.addEventListener('click', () => {
            if (!document.fullscreenElement) {
              terminalWindow.requestFullscreen().catch(err => {
                console.log('Error attempting to enable fullscreen:', err)
              })
            } else {
              document.exitFullscreen()
            }
          })
        }
      })
    </script>

