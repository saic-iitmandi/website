---
// Hero component with typing animation
---

<section 
  id="hero"
  class="relative min-h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat"
  style="background-image: url('/background.svg');"
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/70" />
  
  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
    <div class="animate-slide-up">
      <h1 class="text-6xl md:text-8xl font-bold mb-6 glitch neon-text" data-text="S.A.I.C.">
        S.A.I.C.
      </h1>
      <p class="text-xl md:text-2xl text-secondary mb-8 font-mono">
        System Administration and Infosec Cell
      </p>
    </div>

    <!-- Typing Animation -->
    <div class="animate-slide-up animation-delay-500 mb-12">
      <div class="text-2xl md:text-4xl font-mono text-primary">
        <span class="terminal-line" />
        <span class="text-foreground">We secure </span>
        <span class="text-primary neon-text" id="typing-text"></span>
        <span class="cursor" />
      </div>
    </div>

    <!-- CTA Button -->
    <div class="animate-slide-up animation-delay-1000">
      <button
        id="init-tour-btn"
        class="cyber-card px-8 py-4 bg-primary/10 border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-all duration-300 font-mono uppercase tracking-wider"
      >
        Initialize Tour
      </button>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="text-primary" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m6 9 6 6 6-6"/>
      </svg>
    </div>
  </div>
</section>

<script>
  // Typing animation
  let displayedText = '';
  let currentIndex = 0;
  let currentWordIndex = 0;
  
  const words = ['systems', 'security', 'servers', 'hosting'];
  const typingSpeed = 100;
  const deletingSpeed = 50;
  const pauseDuration = 2000;

  function typeText() {
    const currentWord = words[currentWordIndex];
    const isDeleting = currentIndex > currentWord.length;

    if (!isDeleting && currentIndex <= currentWord.length) {
      setTimeout(() => {
        displayedText = currentWord.slice(0, currentIndex);
        const typingElement = document.getElementById('typing-text');
        if (typingElement) {
          typingElement.textContent = displayedText;
        }
        currentIndex++;
        typeText();
      }, typingSpeed);
    } else if (currentIndex > currentWord.length) {
      setTimeout(() => {
        currentIndex--;
        displayedText = currentWord.slice(0, currentIndex);
        const typingElement = document.getElementById('typing-text');
        if (typingElement) {
          typingElement.textContent = displayedText;
        }
        typeText();
      }, deletingSpeed);
    } else if (currentIndex === 0) {
      setTimeout(() => {
        currentWordIndex = (currentWordIndex + 1) % words.length;
        typeText();
      }, pauseDuration);
    }
  }

  // Smooth scroll function
  function scrollToAbout() {
    const element = document.getElementById('about');
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Start typing animation
    typeText();
    
    // Add click handler for tour button
    const tourBtn = document.getElementById('init-tour-btn');
    if (tourBtn) {
      tourBtn.addEventListener('click', scrollToAbout);
    }
  });
</script>

<style>
  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
</style>
